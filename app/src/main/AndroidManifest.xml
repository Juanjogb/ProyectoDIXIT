<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:toolsNs ="http://schemas.android.com/tools"
    package="trabajo.sdm.dixit">

    <application
        toolsNs:replace="android:icon"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dixit"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Credits activity-->
        <!--Enable up navigation-->
        <activity android:name=".Activities.CreditsActivity"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity"
                />
        </activity>

        <!--Cards activity-->
        <!--Enable up navigation-->
        <activity android:name=".Activities.CardsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity"
                />
        </activity>

        <!--Play activity-->
        <!--Enable up navigation-->
        <activity android:name=".Activities.PlayActivity"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity"
            />
        </activity>

        <!--Settings activity-->
        <!--Enable up navigation-->
        <activity android:name=".Activities.SettingsActivity"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity"
            />
        </activity>

        <!--Rules activity-->
        <!--Enable up navigation-->
        <activity android:name=".Activities.RulesActivity"
            android:parentActivityName=".Activities.MainActivity">
             <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity"
            />
        </activity>

        <!--Scores activity-->
        <!--Enable up navigation-->
        <activity android:name=".Activities.ScoresActivity"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity"
            />
        </activity>


    </application>

</manifest>