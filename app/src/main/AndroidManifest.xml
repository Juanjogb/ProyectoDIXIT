<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolsNs="http://schemas.android.com/tools"
    package="trabajo.sdm.dixit">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dixit"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        toolsNs:replace="android:icon">

        <activity android:name=".Activities.MainActivity"
            android:label="@string/TituloM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Credits activity -->
        <!-- Enable up navigation -->
        <activity
            android:name=".Activities.CreditsActivity"
            android:label="@string/TituloC"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- Cards activity -->
        <!-- Enable up navigation -->
        <activity
            android:name=".Activities.CardsActivity"
            android:label="@string/TituloCards"
            android:parentActivityName=".Activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- Play activity -->
        <!-- Enable up navigation -->
        <activity
            android:name=".Activities.PlayActivity"
            android:label="@string/TituloPartida"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- Settings activity -->
        <!-- Enable up navigation -->
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/TituloS"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- Rules activity -->
        <!-- Enable up navigation -->
        <activity
            android:name=".Activities.RulesActivity"
            android:label="@string/TituloReglas"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- Scores activity -->
        <!-- Enable up navigation -->
        <activity
            android:name=".Activities.ScoresActivity"
            android:label="@string/TituloScores"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- Online activity -->
        <!-- Enable up navigation -->
        <activity android:name=".Activities.OnlineActivity"
            android:label="@string/TituloOnline"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>

        <!-- User activity -->
        <!-- Enable up navigation -->
        <activity android:name=".Activities.UserActivity"
            android:label="@string/TituloUser"
            android:parentActivityName=".Activities.OnlineActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.OnlineActivity" />
        </activity>

        <!-- Partida activity -->
        <!-- Enable up navigation -->
        <activity android:name=".Activities.PartidaActivity"
            android:label="@string/TituloPartida"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>


        <activity android:name=".Activities.PhotoSelectorDialog"
            android:label="@string/TituloPartida"
            android:parentActivityName=".Activities.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.SettingsActivity" />
        </activity>

        <activity android:name=".Activities.PhotoSelectorDialogOnline"
            android:label="@string/TituloPartida"
            android:parentActivityName=".Activities.UserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.UserActivity" />
        </activity>
    </application>

</manifest>